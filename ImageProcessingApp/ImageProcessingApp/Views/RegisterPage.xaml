<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageProcessingApp.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Register" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,20,0,20" />
            <Entry x:Name="FirstNameEntry" Placeholder="First name" Margin="0,10,0,0" />
            <Entry x:Name="LastNameEntry" Placeholder="Last name" Margin="0,10,0,0" />
            <Entry x:Name="EmailEntry" Placeholder="Email address" Margin="0,10,0,0" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" Margin="0,10,0,0" IsPassword="True" />
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm password" Margin="0,10,0,0" IsPassword="True" />
            <Button Text="Register" Clicked="OnRegisterButtonClicked" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>